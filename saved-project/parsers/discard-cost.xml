<matcher name="discard-cost" pattern="discard ?(\d*) (.+)">
  <selector name="amount-select">
    <matcher template="simple-numeric" />
    <matcher template="empty" />
  </selector>
  <selector name="what">
    <matcher name="any-card" pattern="card" />
    <selector template="what-in-cost" />
  </selector>
</matcher>