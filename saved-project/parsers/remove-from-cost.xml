<matcher name="remove-from-cost" pattern="remove (.+) from (.+)">
  <matcher template="counter-type" />
  <selector name="from-what-select">
    <matcher name="cardname" pattern="\[cardname\]" />
    <matcher name="controlled" pattern="(.+) you control">
      <splitter template="permanent-in-cost" />
    </matcher>
  </selector>
</matcher>